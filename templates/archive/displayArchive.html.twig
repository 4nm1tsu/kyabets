{% import 'macro.html.twig' as m %}
{% extends 'base.html.twig' %}

{% block title %}Kyabets-Ranking{% endblock %}

{% block body %}
<h3 class="text-center text-info">Archive</h3>
<div class="container">
    <a href="{{path('archiveUploadForm')}}">
        <button type="button" class="btn btn-secondary fixed-left">
            <i class="fas fa-file-upload"></i>
        </button>
    </a>
    <table class="table table-hover table-light table-striped">
        <thead>
            <tr>
                <th scope="col" class="col-xs-2">#</th>
                <th scope="col" class="col-xs-2">Title</th>
                <th scope="col" class="col-xs-2">Uploaded by</th>
            </tr>
        </thead>
        <tbody class="table-striped">
            {% for archive in archives %}
            <tr>
                <th scope="row"></th>
                <td><a href={{path('archiveShow')}}/{{archive.id}}>{{archive.archiveTitle}}</a></td>
                <td>1</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
