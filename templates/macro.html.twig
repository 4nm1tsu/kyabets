{% macro badge(user) %}
    {% if user.badges is defined and user.badges is not null %}
        {% for badge in user.badges %}
            {% if badge == 'admin' %}
                <!--<span class="badge badge-secondary">{{badge}}</span>-->
                <i class="fas fa-user-cog" style="color:#ff7070"></i>
            {% elseif badge == 'first_place' %}
                <i class="fas fa-medal" style="color:#ffc400"></i>
            {% elseif badge == 'second_place' %}
                <i class="fas fa-medal" style="color:#b5b5b5"></i>
            {% elseif badge == 'third_place' %}
                <i class="fas fa-medal" style="color:#c27400"></i>
            {% else %}
                <span class="badge badge-primary">{{badge}}</span>
            {% endif %}
        {% endfor %}
    {% endif %}
{% endmacro %}

{% macro postcard(post) %}
<div class="container">
    <div class="card border-primary mb-3 mx-auto" style="max-width: 50rem;">
        <a href="/timeline/{{post.id}}" style="text-decoration: none">
            <div class="card-header"><object><a href="/profile/{{post.user.id}}">{{post.user.username}}{{ _self.badge(post.user) }}</a></object>&nbsp;<span class="body text-right" style="font-size:0.8rem;">({{post.date | date('Y-m-d H:i:s')}})</span></div>
            <div class="card-body">
                <p class="card-text">{{post.contents}}</p>
            </div>
        </a>
    </div>
</div>
{% endmacro %}

